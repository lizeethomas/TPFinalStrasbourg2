@using BlazorFinalStrasbourg.DTOs;

<div class="row m-1">
    <div class="col-9">
        <div class="contener text-center">
            <div class="row">
                <div class="col">
                    @if (@adResponse?.Urls.Count > 0)
                    {
                        <img alt="image" src=@adResponse?.Urls.First() width="100" height="50">
                    }
                </div>
                <div class="col">
                    <b> @adResponse.Title</b> <br />
                    @adResponse.Date
                </div>
                <div class="col-6">
                    @adResponse.Description
                </div>
                <div class="col">
                    <NavLink href="@LinkAd" class="btn col-4 p-1 btn-primary">Detail</NavLink>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public AdResponseDTO? adResponse { get; set; }

    public string LinkAd { get => "/ad/" + adResponse.Id; }

}
